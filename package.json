{
  "name": "portfolio-api",
  "version": "1.0.0",
  "description": "This is the backend API for the web portfolio of Yolosopher. It is built using Node.js, Express, and TypeScript, and it includes various other libraries and tools for a comprehensive and robust development setup.",
  "main": "dist/server.js",
  "scripts": {
    "build": "rm -r dist && tsc && tsc-alias",
    "dev": "nodemon ./src/server.ts",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "jest --runInBand",
    "test-watch": "jest --watchAll --runInBand",
    "test-coverage": "jest --coverage --runInBand",
    "docker_redis": "sudo docker-compose up -d"
  },
  "keywords": [
    "express",
    "typescript",
    "jest",
    "supertest",
    "mongoose",
    "starter",
    "template"
  ],
  "author": "Yolosopher",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.8",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-handlebars": "^7.1.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.3",
    "redis": "^4.6.13",
    "validator": "^13.12.0",
    "zod": "^3.23.6"
  }
}
